{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
      "@/utils/*": ["./utils/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/constants/*": ["./constants/*"],
      "@/assets/*": ["./assets/*"],
      "@/styles/*": ["./styles/*"],
      "@/router/*": ["./router/*"]
    },
    "types": ["vite/client", "node"]
  },
  "include": [
    "types/vite-env.d.ts",
    "types/assets.d.ts",
    "types/clean-essential.d.ts",
    "types/framer-motion-fixed.d.ts",
    "types/react-dnd.d.ts",
    "App.tsx",
    "main.tsx",
    "components/**/*.tsx",
    "pages/**/*.tsx", 
    "router/**/*.tsx", 
    "hooks/**/*.ts",
    "utils/**/*.ts", 
    "constants/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "src/",
    "tests/",
    "guidelines/",
    "types/framer-motion.d.ts",
    "types/framer-motion-clean.d.ts", 
    "types/framer-motion-global.d.ts",
    "types/framer-motion-simple.d.ts",
    "types/framer-motion-ultimate.d.ts",
    "types/production-clean.d.ts",
    "**/motion-dom*",
    "**/esm.sh/**",
    "**/*motion-dom*",
    ".vite/",
    ".cache/"
  ]
}